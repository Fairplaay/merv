{
  "root": true,
  "env": {
    "node": true
  },
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "extends": [
    "plugin:vue/essential",
    "plugin:prettier/recommended",
    "eslint:recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      { "singleQuote": true, "printWidth": 100, "useTabs": true, "tabWidth": 4 }
    ]
  }
}
